<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinhtienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thông tin phòng"
            android:textColor="#121313"
            android:textSize="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày tạo đơn"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/ngaytaodonfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:textSize="2dp" />

            <EditText
                android:id="@+id/txttenfee"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotationY="-72"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Tên phòng"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/edttenphongfee"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền phòng"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edttienphongfee"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Số điện"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edttiendienfee"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:text="Tiền dịch vụ"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edttiendichvufee"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số khối nước"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/edttiennuocfee"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="bỏ trống nếu tiền nước cố định"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btntinhtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cornerRadius="8dp"
            android:backgroundTint="#03A9F4"
            android:text="Xuất hóa đơn"
            android:textSize="25dp" />


    </LinearLayout>

</ScrollView>